<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.error_found.kotdroid.phonebook.views.activities.MainActivity">

    <TextView
        android:drawablePadding="24dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true"
        android:text="Create new contact"
        android:drawableLeft="@drawable/add_contacts"
        android:id="@+id/iv_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/iv_add_contact"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
